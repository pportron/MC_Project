<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/EnteteMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:text="Reminders"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/teal_200"
        android:textSize="20sp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ReminderList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">


    </androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/ShowAllBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textSize="13sp"
        android:text="Show All"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AddButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:textSize="13sp"
            android:onClick="GoToAddReminder"
            android:text="Add Reminder" />

        <Button
            android:id="@+id/UpdateButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:layout_weight="0.5"
            android:onClick="GoToUpdate"
            android:text="Update Reminder" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/LogoutButt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:layout_weight="0.5"
            android:onClick="GoToLogin"
            android:text="Log Out" />

        <Button
            android:id="@+id/ToProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="13sp"
            android:layout_margin="5dp"
            android:text="To Profile"
            android:onClick="GoToProfile"/>
    </LinearLayout>



</LinearLayout>
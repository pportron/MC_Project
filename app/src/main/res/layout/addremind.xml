<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:id="@+id/EnteteAR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="New Reminder"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/teal_200"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

    <EditText
        android:id="@+id/NewMessage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.98"
        android:layout_margin="10dp"
        android:hint="Message"
        android:inputType="text"
        android:textSize="20sp" />

        <ImageView
            android:id="@+id/imagemicro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitCenter"
            android:layout_weight="0.2"
            app:srcCompat="@android:drawable/ic_btn_speak_now" />


    </LinearLayout>


    <EditText
        android:id="@+id/NewDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="10dp"
        android:hint="Enter Date : '.. / .. / ....'"
        android:inputType="text"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/LocationY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:hint="Location Y"
            android:inputType="numberDecimal"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/LocationX"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:hint="Location X"
            android:inputType="numberDecimal"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AddNewRButt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:text="Add Reminder" />


        <CheckBox
            android:id="@+id/NotifBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:text="Notification" />
    </LinearLayout>

    <Button
        android:id="@+id/BackToReminders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="10dp"
        android:onClick="BackToMain"
        android:text="Back To Reminders" />


</LinearLayout>